{
    "appenders": {
        "rule-console": {
          "type": "console"
        },
        "rule-error": {
          "type": "file",
          "filename": "log/info_log",
          "encoding": "utf-8",
          "maxLogSize": 104800,
          "numBackups": 3,
          "pattern": "yyyy-MM-dd.log",
          "alwaysIncludePattern": true
        }
      },
      "categories": {
        "default": {
          "appenders": [
            "rule-console",
            "rule-error"
          ],
          "level": "debug",
          "replaceConsole":true
        }
    }
}
